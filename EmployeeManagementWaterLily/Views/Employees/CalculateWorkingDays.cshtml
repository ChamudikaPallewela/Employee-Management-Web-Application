@model dynamic
@{
    ViewBag.Title = "Calculate Working Days";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Include Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .header-image {
            position: relative;
            background-image: url('https://media.licdn.com/dms/image/v2/D5612AQHDSVkIZxZemQ/article-cover_image-shrink_600_2000/article-cover_image-shrink_600_2000/0/1725287479761?e=2147483647&v=beta&t=0jsff49rHSYyOnGrujpJg0Oi_xjl_ZpvNbP2xixzi3A');
            background-size: cover;
            background-position: center;
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .header-title {
            font-size: 2.5rem;
            font-weight: bold;
            background: rgba(0, 0, 0, 0.6);
            padding: 0.5rem 1rem;
            border-radius: 5px;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Header Image with Title Overlay -->
    <div class="header-image">
        <h2 class="header-title">Calculate Working Days</h2>
    </div>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <label for="startDate">Start Date:</label>
                                <input type="date" id="startDate" name="startDate" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="endDate">End Date:</label>
                                <input type="date" id="endDate" name="endDate" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Calculate</button>
                        }
                    </div>
                </div>

                @if (ViewBag.WorkingDays != null)
                {
                    <div class="alert alert-info mt-3 text-center">
                        Working Days: @ViewBag.WorkingDays
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and jQuery (Optional if already included elsewhere) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
