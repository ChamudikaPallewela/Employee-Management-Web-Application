@model EmployeeManagementWaterLily.Employee

@{
    ViewBag.Title = "Edit Employee";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Include Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS for Header Image Overlay -->
    <style>
        .header-image {
            position: relative;
            background-image: url('https://cdn.prod.website-files.com/6448f477eb4d56253a7e0d51/6500ccba7b23fc64f0274fbf_teammates.jpeg');
            background-size: cover;
            background-position: center;
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .header-title {
            font-size: 2.5rem;
            font-weight: bold;
            background: rgba(0, 0, 0, 0.6);
            padding: 0.5rem 1rem;
            border-radius: 5px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header-image">
        <h2 class="header-title">Edit Employee Details</h2>
    </div>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-horizontal mt-4">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-4 col-form-label font-weight-bold" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-4 col-form-label font-weight-bold" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(model => model.JobPosition, htmlAttributes: new { @class = "col-md-4 col-form-label font-weight-bold" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.JobPosition, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.JobPosition, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-8 offset-md-4">
                                        <input type="submit" value="Save" class="btn btn-primary mr-2" />
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <!-- Include Bootstrap JS and jQuery (Optional if already included elsewhere) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
