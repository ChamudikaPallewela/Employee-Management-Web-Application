@{
    ViewBag.Title = "Home Page";
}

<main class="container">

    <!-- Header Section with background image and overlay title -->
    <section class="header-image">
        <div class="header-title">
            <h1>Welcome to Employee Management</h1>
            <p class="lead">Manage Employees, Public Holidays, and Calculate Working Days effortlessly with our easy-to-use web interface.</p>
        </div>
    </section>



    <!-- Features Section -->
    <section class="row mt-5 text-center">
        <div class="col-md-4 mb-4">
            <h2>Manage Employees</h2>
            <p>View, create, edit, and delete employee records with ease. Keep your team organized.</p>
            <a class="btn btn-outline-primary" href="@Url.Action("Index", "Employees")">Go to Employee List &raquo;</a>
        </div>
        <div class="col-md-4 mb-4">
            <h2>Calculate Working Days</h2>
            <p>Calculate the number of working days between two dates while excluding weekends and public holidays.</p>
            <a class="btn btn-outline-primary" href="@Url.Action("CalculateWorkingDays", "Employees")">Start Calculation &raquo;</a>
        </div>
        <div class="col-md-4 mb-4">
            <h2>View Public Holidays</h2>
            <p>Get a list of all public holidays for the year. Easily plan your work schedules and avoid overlaps.</p>
            <a class="btn btn-outline-primary" href="@Url.Action("Index", "PublicHolidays")">View Holidays &raquo;</a>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="text-center mt-5">
        <p>Powered by <a href="https://asp.net" target="_blank">ASP.NET</a>. Designed to streamline employee and holiday management.</p>
    </footer>
</main>

